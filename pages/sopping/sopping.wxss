/* pages/sopping/sopping.wxss */
page{
  background-color: #F4F5F6;
  height: 100%;
}
.title {
  background-color: white;
  text-align: center;
  height: 400rpx;
}
.title image{
  width: 141rpx;
  height: 128rpx;
  display: inline-block;
  margin-top: 45rpx;
}
.title view:nth-of-type(1){
  font-size: 30rpx;
  color: #666;
  line-height: 80rpx;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  margin: 10rpx 0;
}
.title view:nth-of-type(2){
  border: 1px solid #FF4948;
  border-radius: 40rpx;
  line-height: 70rpx;
  display: inline-block;
  font-size: 30rpx;
  color: #FF4948;
  padding: 0 30rpx;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  margin-bottom: 52rpx;
}
.center{
  background-color: white;
  padding-bottom: 48px;
  margin: 0 auto;
  margin-top: 30rpx;
}
.center .center_title{
  width: 690rpx;
  margin: 0 auto;
}
.center .center_title image{
  width: 192rpx;
  height: 42rpx;
  margin:25rpx 0;
}
.center_body{
  width: 690rpx;
  margin: 0 auto;
}
.details{
  display: inline-block;
  width: 330rpx;
}
.details:nth-child(2n){
  margin-left: 28rpx;
}
.details:nth-child(n + 2){
  margin-top: 10rpx;
}
.details image{
  width: 330rpx;
  height: 270rpx;
}
.details >view{
  font-size: 30rpx;
  width: 100%;
}
.details>view:nth-of-type(1){
  line-height: 60rpx;
  color: #333;
}
.details>view:nth-of-type(2) view{
  float: left;
  line-height: 60rpx;
  color: #FF4948;
}
.details>view:nth-of-type(2) view:nth-child(2){
  color: #BBBBBB;
  font-size: 26rpx;
}
.body{
  height: calc(100% - 48px - 100rpx);
}
.edit{
  text-align: right;
  font-size: 30rpx;
  color: #2486FF;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  padding-right: 30rpx;
  background-color:white;
}
.detalis{
  height: 260rpx;
  border-top: 1px solid #EEEEEE;
  background-color: white;
  position: relative;
  box-sizing: border-box;
  padding-left: 100rpx;
}
.detalis > image{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: 30rpx;
  top: calc(50% - 20rpx);
}
.detalis_cneter{
  width: 470rpx;
  display: inline-block;
}
.detalis_cneter>image{
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
  vertical-align: middle;
  margin-top: 25rpx;
  margin-right: 20rpx;
}
.detalis_cneter .g{
  width:calc(100% - 220rpx);
  height: 200rpx;
  margin-top: 25rpx;
  position: relative;
  display: inline-block;
  vertical-align: middle;
}
.detalis_cneter .g view{
  width: 100%;
}
.detalis_cneter .g ._name{
  font-size: 30rpx;
  color: #333333;
  line-height: 60rpx;
}
.detalis_cneter .g ._title{
  font-size: 24rpx;
  line-height: 48rpx;
  color: #999999;
}
.detalis_cneter .g ._monery{
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 24rpx;
  color: #FF4948;
}
.n{
  width: 180rpx;
  display: inline-block;
  
}
.n image{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
}
.n view{
  display: inline-block;
  vertical-align: middle;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  width: 85rpx;
}
.bottom{
  height: 100rpx;
  background-color: white;
  
}
.bottom1{
  height: 100rpx;
  line-height: 100rpx;
  width: 200rpx;
  display: inline-block;
  padding-left: 30rpx;
  box-sizing: border-box;
  vertical-align: middle;
}
.bottom .bottom1 image{
  width: 33rpx;
  height: 33rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 8rpx;
}
.bottom .bottom1 view{
  display: inline-block;
  vertical-align: middle;
}
.bottom .bottom2{
  display: inline-block;
  height: 100rpx;
  vertical-align: middle;
  font-size: "微软雅黑"
}
.bottom .bottom2>view{
  display: inline-block;
  vertical-align: middle;
  height: 100rpx;
  line-height: 100rpx;
}
.bottom .bottom2>view:nth-child(1){
  padding: 0 30rpx;
}
.bottom .bottom2>view:nth-child(2) view{
  height: 48rpx;
  line-height: 48rpx;
  font-size:26rpx;
}
.bottom .btn{
  height: 100%;
  width: 240rpx;
  float: right;
  background-color: #2486FF;
  color: white;
  line-height: 100rpx;
}
.bottom .btn:after{
  border: none;
}