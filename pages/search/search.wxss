/* pages/search/search.wxss */
.query{
  height: 75rpx;
  line-height: 75rpx;
  margin-top: 30rpx;
}
.query .input{
  width: 520rpx;
  display: inline-block;
  height: 75rpx;
  background-color: #F8F8F8;
  font-size: 24rpx;
  border-radius: 30rpx;
  /* text-align: center; */
  line-height: 75rpx; 
  vertical-align: middle; 
  color: #666;
  margin-left: 30rpx;
  padding-left: 30rpx;
}
.query .search{
  display: inline-block;
  width: calc(100% - 620rpx);
  text-align: center;
  vertical-align: middle;
  font-size: 30rpx;
  margin-left: 20rpx;
  border-radius: 30rpx;
}
.History{
  width: 690rpx;
  margin: 0 auto;
}
.History >view:nth-child(1){
  font-size: 30rpx;
  color:black;
  margin: 30rpx 0;
}
.History >view:nth-child(1) .icon{
  width: 33rpx;
  height: 29rpx;
  float: right;
  vertical-align: middle;
}
.History .History_center{
  font-size: 26rpx;
  color: #676767;
  text-align: left;
}
.History .History_center>view{
  line-height: 50rpx;
  height: 50rpx;
  display: inline-block;
  text-align: center;
  padding: 0 20rpx;
  background-color: #F6F6F6;
  margin:15rpx;
  border-radius: 30rpx;
}