/* pages/more/more.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
 .input{
  width: 690rpx;
  display:block;
  height: 75rpx;
  background-color: #F8F8F8;
  font-size: 24rpx;
  border-radius: 30rpx;
  /* text-align: center; */
  line-height: 75rpx; 
  color: #666;
  margin:30rpx auto;
  text-align: center;
}
.type{
  padding: 0 30rpx;
  margin: 0 auto;
  border-bottom: 1px solid #ccc;
  height:65rpx;
  font-size: 30rpx;
  line-height: 65rpx;
}
.type view{
  display: inline-block;
  color: #656565;
    vertical-align: middle;
}
.type>view{
  width: 130rpx;
}
.type>view:nth-child(1) view{
  font-size:24rpx;
  transition: all .5s;
}
.center{
  width: 100%;
  height: calc(100% - 65rpx - 135rpx);
  padding: 20rpx 30rpx;
  box-sizing:  border-box;
}

.center .lis{
  width: 330rpx;
  display: inline-block;
}
.center .lis:nth-child(even){
  margin-left: 25rpx;
}
.center .lis:nth-child(n+3){
  margin-top: 30rpx;
}
.center .lis image{
  width: 330rpx;
  height: 270rpx;
}
.center .lis view{
  font-size: 23rpx;
}
.center .money >view{
  display: inline-flex;
}
.center .money >view:nth-child(1){
  font-size: 26rpx;
  color: #FE504F;
}
.center .money >view:nth-child(2){
  color: #BBBBBB;
  text-decoration:line-through;
}

.box{
  position: fixed;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
  z-index: 998;
  background-color:transparent;
}
.box1{
  width: 100%;
  background-color: white;
  position: absolute;
  top: calc(135rpx + 68rpx);
  /* height: 200rpx; */
}
.box1 view{
  height: 95rpx;
  line-height: 95rpx;
  font-size: 26rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #ccc;
}
.mo{
  vertical-align: middle;
}
.UpAndDown{
  vertical-align: middle;
  /* margin-top: -42rpx; */
}
.UpAndDown view{
  /* width: 30rpx; */
  display: block;
  font-size: 20rpx;
  height: 20rpx;
  width: 20rpx;
  line-height: 20rpx;
}
.UpAndDown view:nth-child(1){
  transform: rotate(180deg);
}
.b{
  float: right;
  vertical-align: middle;
  /* width: 87rpx;
  height: 26rpx;
  vertical-align: middle;
  display: inline-block; */
}
.b image{
  width: 27rpx;
  height: 26rpx;
  display: inline-block;
}
.ClassBox{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: -100%;
  background-color: rgba(0, 0, 0, .5);
  z-index: 9998;
}
._class{
  position: fixed;
  width: 660rpx;
  height: 100%;
  right:-100%;
  top: 0;
  background-color: white;
  z-index: 9999;
}
.ClassBox.show{
  animation: box1 0.3s forwards;
}
._class.show{
  animation: box2 0.5s forwards;
  animation-delay:0.3s;
}
@keyframes box1{
  to{
    left:0;
  }
}
@keyframes box2{
  to{
    right:0;
  }
}
.check1{
  margin-top: 30rpx;
  margin-left: 15rpx;
}
.check1 view,.check2 view{
  width: 180rpx;
  height: 54rpx;
  background-color: #F6F6F6;
  font-size: 24rpx;
  line-height: 54rpx;
  color: #666666;
  text-align: center;
  border-radius: 10rpx;
  display: inline-block;
  margin: 15rpx 15rpx;
}
._class .title{
  font-size: 28rpx;
  color: #989898;
  width: 90%;
  margin: 0 auto;
  margin-top: 30rpx;
}

.sliderView{
  position: relative;
  width: 93%;
  margin: 0 15rpx
}
.left{
  position: absolute;
  width: 90%
}
.right{
  position: absolute;
  width: 90%
}
.slider{
  width: 100%;
  height: 200rpx;
  position: relative;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.slider input{
  width: 200rpx;
  height: 50rpx;
  background-color: #F6F6F6;
  display: inline-block;
  vertical-align: middle;
  font-size: 26rpx;
  padding-left: 20rpx;
}
.slider view{
  display: inline-block;
  height: 50rpx;
  vertical-align: middle;
  margin:0 15rpx;
}
.bottom{
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  height: 100rpx;
  right: 30rpx;
}
.bottom view{
  width: 50%;
  float: left;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  color: white;
}
.bottom view:nth-child(1){
  background-color: #FF4948;
}
.bottom view:nth-child(2){
  background-color: #2487FF;
}
.check1 .tapp,.check2 .tapp{
  background-color: #FAEFED;
  color: #FF5150;
}
